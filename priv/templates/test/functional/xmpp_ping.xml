{{={% %}=}}
<functional>
    <config>
        <snatch module="{% name %}_xmpp"/>
    </config>

    <steps>
        <step name="ping">
            <vars>
                <value key="id">test_bot</value>
                <value key="user">bob@localhost/pc</value>
                <value key="component">alice.localhost</value>
            </vars>
            <send via="true">
                <iq type="get"
                    from="{{user}}"
                    to="{{component}}"
                    id="{{id}}">
                    <ping xmlns="urn:xmpp:ping"/>
                </iq>
            </send>
            <expected>
                <iq type="result"
                    to="{{user}}"
                    from="{{component}}"
                    id="{{id}}"/>
            </expected>
        </step>
    </steps>
</functional>
{%={{ }}=%}
